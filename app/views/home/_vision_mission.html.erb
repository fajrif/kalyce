<!-- About Section -->
<section class="about-section style-two layout-pt-0">
	<div class="auto-container">
		<div class="row">
			<!-- Image Column -->
			<div class="image-column col-lg-6 col-md-12 col-sm-12">
				<figure class="image wow fadeInLeft">
					<%= image_tag("vision-img.png", class: "border-radius-8") %>
				</figure>
			</div>

			<!-- Content Column -->
			<div class="content-column col-lg-6 col-md-12 col-sm-12">
				<div class="inner-column wow fadeInUp">
					<div class="sec-title">
						<h2>Vision</h2>
						<div class="text mr-20">
							<%= raw get_about.vision %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row margin-top--100">
			<!-- Content Column -->
			<div class="content-column col-lg-6 col-md-12 col-sm-12 d-none d-md-block">
				<div class="inner-column bottom-right wow fadeInUp">
					<div class="sec-title" style="margin-bottom:70px;">
						<h2>Mission</h2>
						<div class="text ml-20">
							<%= raw get_about.mission %>
						</div>
					</div>
				</div>
			</div>

			<!-- Image Column -->
			<div class="image-column col-lg-6 col-md-12 col-sm-12 mb-20">
				<figure class="image wow fadeInLeft">
					<%= image_tag("mission-img.png", class: "border-radius-8") %>
				</figure>
			</div>

			<!-- Content Column -->
			<div class="content-column col-lg-6 col-md-12 col-sm-12 d-block d-md-none">
				<div class="inner-column wow fadeInUp">
					<div class="sec-title">
						<h2>Mission</h2>
						<div class="text mr-20">
							<%= raw get_about.mission %>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</section>
<!-- End About Section -->

