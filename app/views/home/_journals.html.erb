<section class="pt-0 wow animate__fadeIn fadeInUp">
    <div class="container margin-40px-bottom sm-margin-20px-bottom">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center">
                <h3 class="alt-font text-extra-dark-gray font-weight-600">Our Journal</h3>
            </div>
        </div>
    </div>
    <div class="container">
      <% @articles.each_with_index do |article, index| %>
        <% if index == 0 %>
          <div class="row align-items-center margin-100px-bottom sm-margin-50px-bottom">
            <div class="col-md-6 text-center md-margin-30px-bottom wow animate__fadeInLeft">
              <%= image_tag url_for(article.image), class: "border-radius-6 w-100" %>
            </div>
            <div class="col-md-6 text-center text-md-start padding-eight-lr lg-padding-six-lr md-padding-15px-lr wow animate__fadeInRight" data-wow-delay="0.2s">
              <span class="text-uppercase margin-10px-bottom d-inline-block text-medium"><%= article.try(:category).try(:name) %></span>
              <h5 class="alt-font text-extra-dark-gray font-weight-600"><%= article.title %></h5>
              <p><%= article.short_description %></p>
              <a href="<%= journal_path(article) %>" class="text-uppercase alt-font text-extra-dark-gray font-weight-400 text-medium w-100">Read More <i class="fa-solid fa-arrow-right-long margin-5px-left text-black text-medium position-relative top-2" aria-hidden="true"></i></a>
            </div>
          </div>
        <% else %>
          <div class="row align-items-center">
            <div class="col-md-6 text-center text-md-start padding-eight-lr lg-padding-six-lr md-padding-15px-lr wow animate__fadeInLeft">
              <span class="text-uppercase margin-10px-bottom d-inline-block text-medium"><%= article.try(:category).try(:name) %></span>
              <h5 class="alt-font text-extra-dark-gray font-weight-600"><%= article.title %></h5>
              <p><%= article.short_description %></p>
              <a href="<%= journal_path(article) %>" class="text-uppercase alt-font text-extra-dark-gray font-weight-400 text-medium w-100">Read More <i class="fa-solid fa-arrow-right-long margin-5px-left text-black text-medium position-relative top-2" aria-hidden="true"></i></a>
            </div>
            <div class="col-md-6 text-center md-margin-30px-bottom wow animate__fadeInRight" data-wow-delay="0.2s">
              <%= image_tag url_for(article.image), class: "border-radius-6 w-100" %>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="text-center margin-five-top wow animate__fadeInUp">
        <a class="btn btn-large btn-transparent-black text-uppercase" href="#">See More</a>
      </div>
    </div>
</section>
