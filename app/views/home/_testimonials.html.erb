<%- @testimonials = Testimonial.all -%>
<% unless @testimonials.empty? %>
<!-- Testimonials Section -->
<section class="layout-pt-60 layout-pb-120">
	<div class="auto-container">
		<div class="row justify-content-center text-center">
			<div class="col-auto">
				<div class="">
					<h1 class="fw-700 text-green">PATIENT EXPERIENCE</h1>
				</div>
			</div>
		</div>


		<div class="job-carousel pt-50 wow fadeInUp owl-carousel owl-theme default-dots">

			<% @testimonials.each do |testimonial| %>
			<!-- Job Block -->
			<div class="">
				<div class="testimonial -type-2 text-center">
					<div class="image-comment">
						<%= image_tag('comment.png', class: "mx-auto") %>
					</div>

					<div class="content">
						<p><%= testimonial.comment %></p>
					</div>
					<div class="author">
						<div class="name"><%= testimonial.full_name %></div>
					</div>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</section>
<!-- End Testimonials Section -->
<% end %>
