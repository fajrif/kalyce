<% title_page("About details") %>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<table class="table table-hover">
					<tr>
						<td style="width:15%;"><b>ID</b></td>
						<td><%= @about.id %></td>
					</tr>
					<tr>
						<td><b>Title</b></td>
						<td><%= raw @about.title %></td>
					</tr>
					<tr>
						<td><b>Description 1</b></td>
						<td><%= raw @about.description1 %></td>
					</tr>
					<tr>
						<td><b>Description 2</b></td>
						<td><%= raw @about.description2 %></td>
					</tr>
					<tr>
						<td><b>Vision</b></td>
						<td><%= raw @about.vision %></td>
					</tr>
					<tr>
						<td><b>Mission</b></td>
						<td><%= raw @about.mission %></td>
					</tr>
				</table>
				<div class="form-actions">
					<%= link_to 'Edit', edit_admins_about_path, :class => 'btn btn-secondary' %>
				</div>
			</div>
		</div>
	</div>
</div>
