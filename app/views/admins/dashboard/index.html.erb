<div class="row">
	<div class="col">
		<div class="h-100">
			<div class="row mb-3 pb-1">
				<div class="col-12">
					<div class="d-flex align-items-lg-center flex-lg-row flex-column">
						<div class="flex-grow-1">
							<h4 class="fs-16 mb-1">Dashboard Admin Panel</h4>
							<p class="text-muted mb-0">Here's total amount of data on your site today.</p>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-xl-3 col-md-6">
					<!-- card -->
					<div class="card card-animate">
						<div class="card-body">
							<div class="d-flex align-items-center">
								<div class="flex-grow-1 overflow-hidden">
									<p class="text-uppercase fw-medium text-muted text-truncate mb-0"> Total Articles</p>
								</div>
							</div>
							<div class="d-flex align-items-end justify-content-between mt-4">
								<div>
									<h4 class="fs-22 fw-semibold ff-secondary mb-4"><%= @total_articles %></h4>
									<a href="<%= admins_articles_path %>" class="text-decoration-underline">View all articles</a>
								</div>
								<div class="avatar-sm flex-shrink-0">
									<span class="avatar-title bg-success-subtle rounded fs-3">
										<i class="ri-newspaper-fill text-success"></i>
									</span>
								</div>
							</div>
						</div><!-- end card body -->
					</div><!-- end card -->
				</div><!-- end col -->

				<div class="col-xl-3 col-md-6">
					<!-- card -->
					<div class="card card-animate">
						<div class="card-body">
							<div class="d-flex align-items-center">
								<div class="flex-grow-1 overflow-hidden">
									<p class="text-uppercase fw-medium text-muted text-truncate mb-0">Total Contacts</p>
								</div>
							</div>
							<div class="d-flex align-items-end justify-content-between mt-4">
								<div>
									<h4 class="fs-22 fw-semibold ff-secondary mb-4"><%= @total_contacts %></h4>
									<a href="<%= admins_contacts_path %>" class="text-decoration-underline">View all contacts</a>
								</div>
								<div class="avatar-sm flex-shrink-0">
									<span class="avatar-title bg-info-subtle rounded fs-3">
										<i class="ri-mail-download-fill text-info"></i>
									</span>
								</div>
							</div>
						</div><!-- end card body -->
					</div><!-- end card -->
				</div><!-- end col -->

				<div class="col-xl-3 col-md-6">
					<!-- card -->
					<div class="card card-animate">
						<div class="card-body">
							<div class="d-flex align-items-center">
								<div class="flex-grow-1 overflow-hidden">
									<p class="text-uppercase fw-medium text-muted text-truncate mb-0">Total Doctors</p>
								</div>
							</div>
							<div class="d-flex align-items-end justify-content-between mt-4">
								<div>
									<h4 class="fs-22 fw-semibold ff-secondary mb-4"><%= @total_doctors %></h4>
									<a href="<%= admins_doctors_path %>" class="text-decoration-underline">View all doctors</a>
								</div>
								<div class="avatar-sm flex-shrink-0">
									<span class="avatar-title bg-primary-subtle rounded fs-3">
										<i class="ri-folder-received-fill text-primary"></i>
									</span>
								</div>
							</div>
						</div><!-- end card body -->
					</div><!-- end card -->
				</div><!-- end col -->
			</div>
		</div>
	</div>
</div>
