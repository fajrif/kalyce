<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
	<meta charset="UTF-8">
	<!-- Enable zoom on mobile device -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= @meta_title.nil? ? configatron.site_title : @meta_title %></title>
	<meta name="title" content="<%= @meta_title.nil? ? configatron.site_title : @meta_title %>">
	<meta name="description" content="<%= @meta_desc.nil? ? configatron.site_description : @meta_desc %>">
	<meta name="robots" content="index, follow">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<meta name="language" content="English">
	<meta name="revisit-after" content="1 days">
	<meta name="author" content="Galo Solutions ">

	<!-- Open Graph / Facebook -->
	<meta property="og:type" content="website">
	<meta property="og:url" content="<%= request.original_url %>">
	<meta property="og:title" content="<%= @meta_title.nil? ? configatron.site_title : @meta_title %>">
	<meta property="og:description" content="<%= @meta_desc.nil? ? configatron.site_description : @meta_desc %>">
	<meta property="og:image" content="<%= configatron.image_logo_url %>">

	<!-- Twitter -->
	<meta property="twitter:card" content="summary_large_image">
	<meta property="twitter:url" content="<%= request.original_url %>">
	<meta property="twitter:title" content="<%= @meta_title.nil? ? configatron.site_title : @meta_title %>">
	<meta property="twitter:description" content="<%= @meta_desc.nil? ? configatron.site_description : @meta_desc %>">
	<meta property="twitter:image" content="<%= configatron.image_logo_url %>">

	<!-- fonts CDN -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Didact+Gothic&display=swap" rel="stylesheet">

	<!-- favicon -->
  <%= favicon_link_tag asset_path('favicon.png') %>

	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>
	<%= stylesheet_link_tag 'application', media: 'all' %>
	<%= yield :head %>
</head>
<body>
	<%= render "shared/header" %>
	<%= yield %>
	<%= render "shared/footer" %>
	<div id="myModal" class="modal fade" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
			</div>
		</div>
	</div>
	<%= javascript_include_tag 'application', nonce: true %>
	<%= yield :tail %>
</body>
</html>
