<!-- start accordions style 01 section -->
<section class="wow animate__fadeIn">
    <div class="container mb-4">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center">
                <h3 class="alt-font text-extra-dark-gray font-weight-400">FAQ</h3>
                <p class="w-80 mx-auto d-inline-block sm-w-100">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris.</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- start accordion -->
                <div class="panel-group accordion-event accordion-style1" id="accordion-design" data-active-icon="ti-minus" data-inactive-icon="ti-plus">
                  <% @faqs.each_with_index do |question, index| %>
                    <!-- start accordion item -->
                    <div class="panel">
                        <div class="panel-heading">
                            <a class="accordion-toggle" data-bs-toggle="collapse" data-bs-parent="#accordion-design" href="#design<%= question.id %>" aria-expanded="false">
                                <div class="panel-title font-weight-600 text-extra-dark-gray text-uppercase">
                                  <span><%= question.question %></span>
                                  <i class="text-dark-gray <%= index == 0 ? 'ti-minus' : 'ti-plus' %>"></i>
                                </div>
                            </a>
                        </div>
                        <div id="design<%= question.id %>" class="panel-collapse collapse <%= 'show' if index == 0 %>" data-bs-parent="#accordion-design" aria-expanded="false" role="tablist">
                            <div class="panel-body">
                              <%= question.answer %>
                            </div>
                        </div>
                    </div>
                    <!-- end accordion item -->
                  <% end %>
                </div>
                <!-- end accordion -->
            </div>
        </div>
    </div>
</section>
